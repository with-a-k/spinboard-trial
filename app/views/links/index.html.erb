<%= link_to "Sign Out", logout_path %>

<div class="link-container">
	<ul>
		<% @links.each do |link| %>
			<% if link.read %>
				<li class="link read" data-id="<%= link.id %>">
			<% else %>
				<li class="link" data-id="<%= link.id %>">
			<% end %>
				<span class="link-body"><%= link_to link.title, link.location %></span> <button class="status-change" data-read="<%= link.read %>">
				<% if link.read %>
					Mark as Unread
				<% else %>
					Mark as Read
				<% end %>
			</button></li>
		<% end %>
	</ul>
</div>

<p>Add Link</p>
<%= form_for @new_link do |f| %>
	<%= f.label :title, "Title:" %>
	<%= f.text_field :title %><br>
	<%= f.label :location, "Location:" %>
	<%= f.text_field :location %><br>
	<%= f.submit "Create Link" %>
<% end %>